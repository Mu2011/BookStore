@model IEnumerable<Mu_BookStore.Models.Domain.Publisher>
@{
}

<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <a class="btn btn-dark" href="/Publisher/Add">+ Add more</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Publishers</h3>
      <table class="table table-striped table-bordered table-dark">
        <thead>
          <tr>
            <th>Publisher Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var Publisher in Model)
          {
            <tr>
              <td>@Publisher.PublisherName</td>
              <td>
                <a class="btn btn-success" href="/Publisher/Update?id=@Publisher.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Publisher/Delete?id=@Publisher.Id"><i class="bi bi-trash"></i> Delete</a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>