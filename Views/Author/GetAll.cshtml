@model IEnumerable<Mu_BookStore.Models.Domain.Author>
@{
}

<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <a class="btn btn-dark" href="/Author/Add">+ Add more</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Authors</h3>
      <table class="table table-striped table-bordered table-dark">
        <thead>
          <tr>
            <th>Author Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var Author in Model)
          {
            <tr>
              <td>@Author.AuthorName</td>
              <td>
                <a class="btn btn-success" href="/Author/Update?id=@Author.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Author/Delete?id=@Author.Id"><i class="bi bi-trash"></i> Delete</a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>